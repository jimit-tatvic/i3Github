[global]
    # Display
    monitor = 0
    follow = mouse
    
    # Geometry: width x height - padding
    width = 350
    height = 300
    origin = top-right
    offset = 20x50
    scale = 0
    notification_limit = 5

    # Visuals
    progress_bar = true
    progress_bar_height = 10
    frame_width = 2
    frame_color = "#89b4fa"
    separator_color = frame
    
    # Spacing and Padding
    padding = 20
    horizontal_padding = 20
    text_icon_padding = 15
    
    # Text
    font = JetBrains Mono 10
    line_height = 4
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    ellipsize = middle
    
    # Icons
    icon_position = left
    min_icon_size = 48
    max_icon_size = 64
    
    # Effects
    transparency = 10
    corner_radius = 12
    
    # Interaction
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

